<h1>Add new company</h1>
<% provide(:title, 'Add company') %> 
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@company) do |f| %> 
			<%= render 'shared/error_messages' %>
			<%= f.label :registeredName, "Registered name" %>
			<%= f.text_field :registeredName %> 
			<%= f.label :email %>
			<%= f.text_field :email %> 
			<%= f.label :registeredAddress, "Registered address"%>
			<%= f.text_field :registeredAddress %>
			<%= f.label :vatNumber, "VAT Number" %>
			<%= f.text_field :vatNumber %>
			<%= f.submit "Create company", class: "btn btn-large btn-primary" %> 
		<% end %>
  	</div>
</div>
