<%provide(:title, "Accounts")%>
<H1>Accounts <%= link_to image_tag('plus.png', :size => "50x50"), 'accounts/new' %> </H1> 

	<div class="row">
		<div class="span6">
			<aside class="span4">
				<section>
					<h3>Checking Account</h3> 
					<table class="table table-striped table-hover">
					<thead></thead>	
					<tbody>	
					<% @accountChecking.each do |account| %> 
						<tr>
							<td><%= account.bankName %></td>
							<td><%= account.accountBalance %></td>
							<td><%= image_tag "show_on_right.png", size: "30x30" %></td>
						</tr> 	
					<% end %>
					</tbody>
					</table>
				</section> 
				<section>
					<h3>Saving Account</h3> 
					<table class="table table-striped">
					<% @accountSaving.each do |account| %> 
						<tr>
							<td><%= account.bankName %></td>
							<td><%= account.accountBalance %></td>
							<td> <%= image_tag "show_on_right.png", size: "30x30" %></td>
						</tr> 	
					<% end %> 
					</table>
				</section>
				<section>
					<h3>Cash Account</h3>
					<table class="table table-striped"> 
					<% @accountCash.each do |account| %> 
						<tr>
							<td><%= account.bankName %></td>
							<td><%= account.accountBalance %></td>
							<td><%= image_tag "show_on_right.png", size: "30x30" %></td>
						</tr> 	
					<% end %>
				</table>
				</section>
			</aside>
		</div>	
		<div class="span6">
			<h3>Hello</h3>
		</div>	 
	</div>